    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    <welcome-file-list>
        <!--<welcome-file>faces/index.xhtml</welcome-file>-->
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
